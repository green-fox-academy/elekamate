@* Generator: MvcHelper *@

@model List<ToDo>

@{
    ViewData["Title"] = "List";
}

<a href="addtodo">AddToDo</a>

@using (Html.BeginForm("list", "todo", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="Search" />

}

@if (Model.Count() == 0)
{
    <p>No result.</p>
}
else
{
    <table>
        <tr>
            <th>ID</th>
            <th>Action</th>
            <th>Done</th>
            <th>Urgent</th>
        </tr>
        @foreach (var xToDo in Model)
        {
            <tr>
                <td>@xToDo.Id</td>
                <td>@xToDo.Title</td>
                <td>@xToDo.IsDone</td>
                <td>@xToDo.IsUrgent</td>
                <td>@Html.ActionLink("Delete", "DeleteToDo", new { toDoIDToDelete = xToDo.Id })</td>
                <td>
                    <form action="DeleteToDo?toDoIDToDelete=@xToDo.Id" method="post">
                        <input type="submit" value="delete item" />
                    </form>
                </td>
            </tr>
        }
    </table>
}
